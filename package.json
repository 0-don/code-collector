{
  "name": "code-collector",
  "displayName": "Code Collector",
  "description": "Gather code context for AI based on imports",
  "version": "0.0.15",
  "publisher": "0-don",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/0-don/code-collector.git"
  },
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-collector.gatherImports",
        "title": "Code Collect"
      },
      {
        "command": "code-collector.collectAll",
        "title": "Code Collect All"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "code-collector.gatherImports",
          "when": "resourceExtname =~ /\\.(ts|tsx|js|jsx|java|kt|py)$/",
          "group": "navigation@0"
        },
        {
          "command": "code-collector.collectAll",
          "group": "navigation@99"
        }
      ],
      "editor/context": [
        {
          "command": "code-collector.gatherImports",
          "when": "resourceExtname =~ /\\.(ts|tsx|js|jsx|java|kt|py)$/",
          "group": "navigation@0"
        },
        {
          "command": "code-collector.collectAll",
          "group": "navigation@99"
        }
      ]
    },
    "keybindings": [
      {
        "command": "code-collector.gatherImports",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Code Collector",
      "properties": {
        "codeCollector.ignorePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            "target/**",
            ".git/**",
            "dist/**",
            "build/**",
            ".next/**",
            "out/**",
            "*.log",
            "*.lock",
            "package-lock.json",
            "pnpm-lock.yaml",
            "bun.lock*",
            "yarn-error.log"
          ],
          "description": "Glob patterns for files to ignore when collecting all code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "enhanced-resolve": "^5.18.2",
    "fast-xml-parser": "^5.2.5",
    "gradle-to-js": "^2.0.1",
    "java-parser": "^3.0.1"
  }
}
